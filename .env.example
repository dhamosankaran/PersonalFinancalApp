# Database
DATABASE_URL=postgresql://finance_user:finance_password@localhost:5432/finance_db
# For SQLite alternative: DATABASE_URL=sqlite:///./data/finance.db

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# LLM Provider (openai or gemini)
DEFAULT_LLM_PROVIDER=openai

# Backend
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Embeddings (Local)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# ChromaDB (Local)
CHROMA_PERSIST_DIRECTORY=./data/chromadb

# DuckDB (Local)
DUCKDB_PATH=./data/analytics.duckdb

# File Upload
UPLOAD_DIRECTORY=./data/uploads
MAX_UPLOAD_SIZE=10485760

# Statements Directory (for RAG processing)
STATEMENTS_DIRECTORY=./statements

# OCR
TESSERACT_PATH=/usr/local/bin/tesseract

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
